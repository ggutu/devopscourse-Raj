
pipeline {
    agent { node { label "terraform-node" } } 
    parameters {
                choice(name: 'deploy_choice', choices:['apply','destroy'],description:'The deployment type')
                  }
    environment {
        EMAIL_TO = 'fusisoft@gmail.com'
    }
    stages {
        stage('Terraform Provision') {
            steps {
                sh """
                    cd terraform
                    terraform init
                    terraform plan
                    terraform apply --auto-approve
                """
                sh 'pwd'
            }
        }
        stage('Time to Kill?') {
            steps {
                input message: 'Destroy terraform resources?'
            }
        }
        stage('Search and Destroy') {
            steps {
                sh 'cd terraform; terraform destroy --auto-approve'
            }
        }
    }
}
